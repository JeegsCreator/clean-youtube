{
  "manifest_version": 3,
  "name": "Clean YouTube",
  "version": "0.0.0",
  "description": "Improve your YouTube experience by cleaning the UI and adding new features (like a more quick to use picture in picture button)",
  "icons": {
    "128": "/assets/favicon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "home.js"
      ],
      "exclude_matches": [
        "https://www.youtube.com/@*"
      ]
    },
    {
      "matches": [
        "https://www.youtube.com/@*"
      ],
      "js": [
        "profile.js"
      ]
    },
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "watch.js"
      ]
    }
  ]
}